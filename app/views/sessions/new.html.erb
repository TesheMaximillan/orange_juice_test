<%= form_for @user, method: :post, url: sessions_path, data: { turbo: false} do |f| %>
  <div class="form-group">
    <div class="form-group__field">
      <div class="user-profile">
        <%= image_tag "https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png", class: "img" %>
        <p>Upload Picture</p>
      </div>
    </div>
    <div class="form-group__field form-group__input-container">
      <%= f.label :username %>
      <%= f.text_field :username, class: "form-group__field--input", autofocus:true, required:true, autocomplete: true, placeholder: "Userame"%>
    </div>
    <%= f.submit "Login", class: "submit-btn" %>
    <%= link_to  "Register", new_user_path, class: "nav-btn" %>
  </div>
<% end %>
